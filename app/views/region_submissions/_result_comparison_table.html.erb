<table class='col-md-12 text-left'>
  <% if region_submission.testing_for == RegionSubmission::MAP_FILTERS[:connection_type][:home_wifi] && region_submission.provider_down_speed %>
    <tr>
      <td class="text-center">Your advertised download speed is: <span class="percent-val"><%= print_speed(region_submission.provider_down_speed) %></span></td>
    </tr>
    <tr>
      <td class="text-center">Your actual speed is <%= actual_speed_percentage(region_submission) %> than expected</td>
    </tr>
    <tr>
      <td class="text-center"><%= compared_speed_percentage(region_submission) %> of other home connections</td>
    </tr>
  <% elsif region_submission.testing_for == Submission::MAP_FILTERS[:connection_type][:home_wifi] && region_submission.provider_down_speed.blank? %>
    <tr>
      <td class="text-center"><h4>Your internet speed is <%= compared_speed_percentage(region_submission).downcase.html_safe %> of other home internet connections in your area.</h4></td>
    </tr>
  <% elsif region_submission.testing_for == Submission::MAP_FILTERS[:connection_type][:mobile_data] %>
    <tr>
      <td class="text-center"><h4>Your internet speed is <%= compared_speed_percentage(region_submission).downcase.html_safe %> of other mobile internet speeds in your area.</h4></td>
    </tr>
  <% elsif region_submission.testing_for == Submission::MAP_FILTERS[:connection_type][:public_wifi] %>
    <tr>
      <td class="text-center"><h4>Your internet speed is <%= compared_speed_percentage(region_submission).downcase.html_safe %> of other Work/Public connections in your area.</h4></td>
    </tr>
  <% end %>
</table>
