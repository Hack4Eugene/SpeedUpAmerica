  <div class='modal-dialog modal-lg'>
    <div class='modal-content'>
      <div class='modal-header'>
        <%= button_tag 'Ã—', type: 'button', class: 'close', data: { dismiss: 'modal' }, aria: { hidden: 'true' } %>
        <h4 class='text-center'>Please enable Geo-Location!</h4>
      </div>

      <div class='modal-body'>
        <div class='row'>
